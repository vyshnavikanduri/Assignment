class Solution {
    int greatestOfThree(int A, int B, int C) {
        int temp;
        // code here
//checking adjcanet values and then swapping them then we will get a increasing order in that we are returning first value
        if(A<B)
        {
            temp=A;
            A=B;
            B=temp;
        }
        if(B<C)
        {
            temp=B;
            B=C;
            C=temp;
        }
        if(A<B)
        {
            temp=A;
            A=B;
            B=temp;
        }
        return A;
    }
}
